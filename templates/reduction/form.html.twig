{% extends 'baseadmin.html.twig' %}

{% block body %}
<style>
/* Style du formulaire */
table {
  width: 100%;
  border-collapse: separate;
  border-spacing: 5px;
  font-family: Arial, sans-serif;
}

/* Style des cellules du formulaire */
td {
  padding: 10px;
  vertical-align: top;
}

/* Style des étiquettes du formulaire */
label {
  display: block;
  margin-bottom: 5px;
}

/* Style des champs de saisie du formulaire */
input[type="text"], input[type="number"] {
  width: 100%;
  padding: 8px;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-sizing: border-box;
}

/* Style des messages d'erreur du formulaire */
.error-message {
  color: red;
  font-size: 12px;
  margin-top: 5px;
}

/* Style du bouton de soumission du formulaire */
input[type="submit"] {
  background-color: #4CAF50;
  color: white;
  padding: 10px 20px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

input[type="submit"]:hover {
  background-color: #45a049;
}
</style>

<table>
    <tbody>
        <tr>
		{{form_start(formA)}}
            <td>{{ form_label(formA.codeproduit,"Code de produit") }}</td>
            <td>{{ form_widget(formA.codeproduit) }}</td>
            <td>{{ form_errors(formA.codeproduit) }}</td>
        </tr>
        <tr>
            <td>{{ form_label(formA.remise,"Pourcentage de réduction") }}</td>
            <td>{{ form_widget(formA.remise) }}</td>
            <td>{{ form_errors(formA.remise) }}</td>
        </tr>
        <tr>
            <td colspan="4">{{ form_widget(formA.save) }}</td>
        </tr>
    </tbody>
</table>

{{ form_end(formA) }}

{% endblock %}
