{% extends 'baseadmin.html.twig' %}

{% block body %}
<style>
/* Style du titre */
h1 {
  font-size: 24px;
  color: #333;
  text-align: center;
  margin-bottom: 20px;
}

/* Style de la table */
table {
  width: 100%;
  border-collapse: collapse;
  border-spacing: 0;
  font-family: 'Arial', sans-serif;
  border-radius: 10px;
  overflow: hidden;
  box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
}

/* Style de l'en-tête de la table */
thead {
  background-color: #1abc9c;
  color: white;
}

/* Style des cellules de l'en-tête */
th {
  padding: 15px;
  text-align: left;
}

/* Style des lignes de la table */
tbody tr {
  background-color: #f9f9f9;
}

/* Style des cellules de données */
td {
  padding: 15px;
}

/* Style du lien 'Delete' */
a {
  color: #e74c3c;
  text-decoration: none;
}

a:hover {
  text-decoration: underline;
}
</style>

<h1>Liste des commandes</h1>
<table>
    <thead>
        <tr>
            <th>idcommande</th>
            <th>iduser</th>
            <th>idpanier</th>
            <th>prix</th>
            <th>tel</th>
            <th>datecommande</th>
            <th>codepostal</th>
            <th>rue</th>
            <th>ville</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {% for commande in commandes %}
        <tr>
            <td>{{ commande.idcommande }}</td>
            <td>{{ commande.iduser.getId }}</td>
            <td>{{ commande.idpanier.getIdpanier }}</td>
            <td>{{ commande.prix }}</td>
            <td>{{ commande.tel }}</td>
            <td>{{ commande.datecommande|date('Y-m-d') }}</td>
            <td>{{ commande.codepostal }}</td>
            <td>{{ commande.rue }}</td>
            <td>{{ commande.ville }}</td>
            <td><a href="{{ path('commande_delete', {'idcommande': commande.idcommande}) }}">Delete</a></td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
